class Animal
    attr_accessor :color, :size
end

class Perro < Animal
    attr_accessor :raza_id
end
    
def Sonido
    puts "#{@animal} did Sonido"
end

dog = Perro.new

def initialize(ani_color, ani_size, ani_raza_id)
    @color = ani_color
    @size = ani_size
    @raza_id = ani_raza_id
end


